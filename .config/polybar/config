[colors]
background = #99000000
foreground = #cfcfcf

[settings]
compositing-foreground = source

[options]
height = 32

[bar/date]
width = 10%
height = ${options.height}

offset-x = 8
offset-y = 8

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Hack Nerd Font:size=8;3

modules-center = date

wm-restack = bspwm

[bar/stats]
width = 15%
height = ${options.height}

offset-x = 85%:-8
offset-y = 8

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Hack Nerd Font:size=8;3
font-1 = Material Design Icons Desktop:size=8;4

modules-center = speed_1 speed_2 cpu battery

module-margin = 1

wm-restack = bspwm

[bar/system]
width = 7.5%
height = ${options.height}

offset-x = 77.5%:-16
offset-y = 8

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Hack Nerd Font:size=8;3
font-1 = Material Design Icons Desktop:size=13;4
font-2 = Material Design Icons Desktop:size=13;4

modules-center = pulseaudio kdeconnect 

module-margin = 1

wm-restack = bspwm

[bar/tray]
width = 20
height = ${options.height}

offset-x = 77.5%:-44
offset-y = 8

background = #00000000

modules-center = empty

tray-position = right
tray-background = ${colors.background}
tray-padding = 14

[module/pulseaudio]
type = internal/pulseaudio

interval = 5

format-volume = <ramp-volume>

label-muted = 󰖁
label-muted-foreground = #ffd200

ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾

[module/speed_1]
type = internal/network
interface = enp8s0

interval = 1

format-connected = <label-connected>
label-connected = %downspeed%

[module/speed_2]
type = internal/network
interface = wlp9s0

interval = 1

format-connected = <label-connected>
label-connected = %downspeed%

[module/cpu]
type = custom/script

interval = 1
exec = cpu-speed.sh

[module/kdeconnect]
type = custom/script

interval = 0.25
exec = kdeconnect.sh -d

[module/title]
type = custom/script

interval = 4
exec = echo $(ara.sh "$(spt.py title)")

[module/icon]
type = custom/text
content = " 󰓇"

[module/like]
type = custom/script

interval = 8
exec = spt.py state

click-left = spt.py like &

[module/empty]
type = custom/text
content = " "

[module/date]
type = internal/date
interval = 30

label = %time%
time = %a, %I:%M %p
time-alt = %d %b, %Y

[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP0

full-at = 99

label-charging = %percentage%% 󰉁
label-discharging = %percentage%%

poll-interval = 5